<%- include('partials/header') %>
<h1>Nouvelle commande</h1>
<% if (error) { %><div class="alert alert-error"><%= error %></div><% } %>
<form method="POST" action="/orders" class="card">
  <div class="grid two">
    <label>Marque
      <select name="brand" required>
        <option value="">Choisir</option>
        <option value="ZARBITI">ZARBITI (home)</option>
        <option value="BMT">BMT (kids)</option>
        <option value="TBP">TBP (kitchen/bathroom)</option>
      </select>
    </label>
    <label>Usage
      <input type="text" name="usage_type" placeholder="home/kids/kitchen...">
    </label>
    <label>Client
      <input type="text" name="customer_name" placeholder="Nom du client">
    </label>
    <label>Téléphone*
      <input type="text" name="customer_phone" required>
    </label>
    <label>Adresse
      <input type="text" name="customer_address">
    </label>
    <label>Ville
      <input type="text" name="customer_city">
    </label>
    <label>Frais de livraison (TND)
      <input type="number" step="0.01" name="delivery_fee" value="0">
    </label>
  </div>
  <h3>Lignes produit</h3>
  <div class="item-row">
    <label>Design
      <input type="text" name="design_name" required>
    </label>
    <label>Taille
      <input type="text" name="size_text" placeholder="160x230">
    </label>
    <label>Quantité
      <input type="number" name="quantity" value="1" min="1">
    </label>
    <label>Prix unitaire (TND)
      <input type="number" step="0.01" name="unit_price" value="0">
    </label>
  </div>
  <p class="hint">Ajoutez d'autres lignes après la création depuis la fiche commande.</p>
  <button type="submit">Enregistrer</button>
</form>
<%- include('partials/footer') %>
